<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.commands">
      <command
            name="Sample Command"
            categoryId="ru.idealplm.specification.oceanos.commands.category"
            id="ru.idealplm.specification.oceanos.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ru.idealplm.specification.oceanos.commands.sampleCommand"
            class="ru.idealplm.specification.oceanos.handlers.SampleHandler">
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ru.idealplm.specification.oceanos.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ru.idealplm.specification.oceanos.toolbars.sampleToolbar">
            <command
                  commandId="ru.idealplm.specification.oceanos.commands.sampleCommand"
                  icon="icons/specOceanos.gif"
                  tooltip="Построение спецификации"
                  id="ru.idealplm.specification.oceanos.toolbars.sampleCommand">
                  <visibleWhen>
                        <reference
                            definitionId="com.teamcenter.rac.pse.inMainView">
                        </reference>
                  </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
